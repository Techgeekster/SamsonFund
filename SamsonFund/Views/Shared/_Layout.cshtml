<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jquerytoast")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: white; border-color: white; height: 100px;">
        <div style="height: 60px; background-color: #86C43F; border-color: #86C43F;">
            <div class="container">
                <div class="navbar-header" style="margin-left: 75px;">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/Images/SamsonFundLogoTransparent.png")" id="SamsonLogo" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav" style="margin-left: 15px;">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Why Us?", "Why", "Home")</li>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top: 60px; max-width: 1050px;">
        <div class="row">
            <div class="col-lg-10 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
            </div>
            <div style="font-size: 20px; font-weight: bold;">
                Advertising
            </div>
        </div>
        <div class="row">
            <hr />
            <footer>
                <div class="col-lg-1 col-lg-offset-2 col-md-1 col-md-offset-1 hidden-sm hidden-xs" style="margin-right: 0px;">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/Images/SamsonFundLogoTransparent.png")" style="height: 50px; margin-top: -15px;" />
                    </a>
                </div>
                <div class="col-lg-8 col-md-9 col-sm-12 col-xs-12" style="text-align: center;">
                    <ul class="footerList">
                        <li class="fst"><div>9571 South 700 East, #103</div></li>
                        <li><div>Sandy, UT 84070</div></li>
                        <li><div>(801) 918-4357</div></li>
                        <li><div>@Html.ActionLink("Contact Us", "Contact", "Home")</div></li>
                    </ul>
                    <div>
                        <p style="font-size: 9px;">© Copyright @DateTime.Now.Year Samson Fund. Never sacrifice strength chasing a return. All rights reserved. Various trademarks held by their respective owners.</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquerytoast")
    @Scripts.Render("~/bundles/jquerymask")
    @Scripts.Render("~/bundles/jqueryvalidate")
    @RenderSection("scripts", required: false)
</body>
</html>
